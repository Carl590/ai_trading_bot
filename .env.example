# Telegram Trading Bot Environment Configuration
# Copy this file to .env and fill in your values

# ==========================================
# REQUIRED SETTINGS (Must be configured)
# ==========================================

# Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=8482815083:AAHFqxiPCt0eZ6GjD8cahnAzXlA4ql3z9qk

# Security key for TradingView webhooks (can be any string)
WEBHOOK_SECRET_KEY=your-secret-webhook-key-123

# ==========================================
# OPTIONAL SETTINGS (Default values provided)
# ==========================================

# Network Settings
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8080

# Solana RPC (you can use a custom RPC for better performance)
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_RPC_TIMEOUT=30

# Jupiter Aggregator API
JUPITER_API_URL=https://quote-api.jup.ag/v6

# Trading Settings
DEFAULT_SLIPPAGE_BPS=100
DEFAULT_TRADE_AMOUNT_SOL=0.01
MAX_TRADE_AMOUNT_SOL=1.0
MIN_TRADE_AMOUNT_SOL=0.001

# Risk Management
DAILY_LOSS_LIMIT_SOL=0.1
MAX_POSITIONS_PER_USER=10
EMERGENCY_STOP_LOSS_PERCENT=-50.0

# External API Keys (Optional but recommended)
BIRDEYE_API_KEY=your-birdeye-api-key
DEXSCREENER_API_KEY=your-dexscreener-api-key
COINGECKO_API_KEY=your-coingecko-api-key

# Database (SQLite by default, can use PostgreSQL for production)
DATABASE_URL=sqlite:///trading_bot.db

# Logging
LOG_LEVEL=INFO
LOG_FILE=trading_bot.log

# Security
RATE_LIMIT_PER_MINUTE=30
SESSION_TIMEOUT_HOURS=24

# Notifications
SEND_TRADE_NOTIFICATIONS=true
SEND_ERROR_NOTIFICATIONS=true
SEND_DAILY_SUMMARY=true

# Performance
PRICE_UPDATE_INTERVAL_SECONDS=30
BEST_TRADES_REFRESH_MINUTES=5

# Feature Flags
ENABLE_AI_TRADING=true
ENABLE_BEST_TRADES=true
ENABLE_COPY_TRADING=false

# Telegram User Restrictions (comma-separated user IDs)
# Leave empty to allow all users, or specify: 12345,67890
TELEGRAM_ALLOWED_USERS=